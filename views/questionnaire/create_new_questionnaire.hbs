<div class="container">
  <h2>Create new questionnaire</h2>
	<form action="/questionnaires/new" method="POST">
	  <div class="form-group">
	    <label for="questionnairetitle">Title</label>
	    <input type="text" class="form-control" id="questionnairetitle" aria-describedby="titleHelp" placeholder="Enter title" required="true">
	    <small id="titleHelp" class="form-text text-muted">Title is mandatory.</small>
	  </div>
	  <div class="form-group">

	  <div class="form-group">
	    <label for="submissions">Submissions</label>
	    <input type="number" value="1" min="1" class="form-control" id="submissions" aria-describedby="submissionsHelp" required="true">
	    <small id="submissionsHelp" class="form-text text-muted">Submissions is mandatory.</small>
	  </div>

	  <div class="form-group">
	    <label for="questionInput"><b>Question 1</b></label>
  		<input type="text" class="form-control" aria-label="Text input with checkbox" placeholder="Enter question" id="questionInput">  	
	  </div>

	  <div class="form-group ml-3">
	    <label for="max_points">Max Points</label>
	    <input type="number" value="2" min="1" class="form-control" id="max_points" required="true">
	  </div>

	  <div class="form-group">

		<div class="form-group ml-5">
			<label for="optionInput">Option 1</label>
			<div class="input-group mb-3">
			  <div class="input-group-append">
			  	</div>
			  		<input type="text" class="form-control" aria-label="Text input with checkbox" placeholder="Enter option" id="optionInput">
			  	<div class="input-group-text"> 		
			    	<input type="checkbox" id="correctAnswerCheckbox" aria-label="Checkbox for text input">
					<label for="correctAnswerCheckbox">Correct</label>	    	
			  </div>	  
			</div>
			<label for="hint">Hint (optional):</label>
			<input type="text" class="form-control "name="" placeholder="Enter hint" id="hint">
		</div>

		<div class="form-group ml-5">
			<label for="optionInput">Option 1</label>
			<div class="input-group mb-3">
			  <div class="input-group-append">
			  	</div>
			  		<input type="text" class="form-control" aria-label="Text input with checkbox" placeholder="Enter option" id="optionInput">
			  	<div class="input-group-text"> 		
			    	<input type="checkbox" id="correctAnswerCheckbox" aria-label="Checkbox for text input">
					<label for="correctAnswerCheckbox">Correct</label>	    	
			  </div>	  
			</div>
			<label for="hint">Hint (optional):</label>
			<input type="text" class="form-control "name="" placeholder="Enter hint" id="hint">

			<button type="button" class="btn btn-primary" onclick="addNewQuestion();">Add question</button>
		</div>


	  </div>
	  <button type="submit" class="btn btn-primary">Create</button>
	  <a class="btn btn-primary" href="/questionnaires/cancel">Cancel</a>
	</form>
</div>