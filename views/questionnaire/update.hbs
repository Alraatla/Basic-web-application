<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h3 class="text-center mb-3"><i class="fas fa-user-edit"></i>Edit questionnaire</h3>
                <h4 class="text-left mb-2">{{questionnaire.title}}</h4>
                {{>messages}}
                <form method="POST" action="/questionnaires/edit/{{questionnaire.id}}">
                    <div class="form-group">
                        <label for="questionnairetitle">Title</label>
                        <input type="text" class="form-control" name="title" id="questionnairetitle" aria-describedby="titleHelp" placeholder="Enter title" required="true" value="{{questionnaire.title}}">
                        <small id="titleHelp" class="form-text text-muted">Title is mandatory.</small>
                    </div>

                    <div class="form-group">
                        <label for="submissions">Submissions</label>
                        <input type="number" min="1" class="form-control" name="submissions" id="submissions" aria-describedby="submissionsHelp" required="true" value="{{questionnaire.submissions}}">
                        <small id="submissionsHelp" class="form-text text-muted">Submissions is mandatory.</small>
                    </div>

                    <div class="form-group" id="questions">

                        {{#each questionnaire.questions as |question index|}}
                        {{>question_info question}}
                        {{/each}}

                    </div>
                    <button type="button" class="btn btn-primary" onclick="addNewQuestion();">Add question</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
                <p class="lead mt-4"><a href="/questionnaires">Cancel</a></p>
            </div>
        </div>
    </div>
</div>
